APP_NAME=Cygnus
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8080

# You must create a Discord Application to get these credentials
# The Redirect URI must match what you configure in your Discord App.
DISCORD_CLIENT_ID=""
DISCORD_REDIRECT_URI="http://localhost:3000/callback"
DISCORD_CLIENT_SECRET=""

LOG_CHANNEL=stack
LOG_SLACK_WEBHOOK_URL=

SERVER_NOTICE="Welcome to Cygnus!"
SERVER_VERSION=188.4
SERVER_EXP_RATE=4
SERVER_MESO_RATE=2
SERVER_DROP_RATE=1

DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=cygnus
DB_USERNAME=cygnus
DB_PASSWORD=secret

# --- Mail Configuration ---

# For local development with Docker, the default settings use MailHog.
# MailHog catches all outgoing emails, which you can view at: http://localhost:8025
MAIL_DRIVER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null

# For production, you should use a reliable transactional email service.
# Using 'smtp' is highly recommended over 'mail' or 'sendmail' for reliability.
# Example for a real SMTP server (e.g., Mailgun, SendGrid):
# MAIL_DRIVER=smtp
# MAIL_HOST=smtp.mailgun.org
# MAIL_PORT=587
# MAIL_USERNAME=your_username
# MAIL_PASSWORD=your_password
# MAIL_ENCRYPTION=tls

MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Get a secret from https://www.google.com/recaptcha/
CAPTCHA_SECRET=

CACHE_DRIVER=file
QUEUE_DRIVER=sync
SWAGGER_GENERATE_ALWAYS=true
